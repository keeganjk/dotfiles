# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd 

# Media keys
XF86AudioPlay
  mpc toggle

super + shift + p
  mpc toggle

XF86AudioNext
  mpc next

super + n
  mpc next

super + shift + n
  mpc prev

XF86AudioMute
  amixer set Master toggle; killall dwmstatus; dwmstatus &

XF86AudioLowerVolume
  amixer set Master 1%-; killall dwmstatus; dwmstatus &

XF86AudioRaiseVolume
  amixer set Master 1%+; killall dwmstatus; dwmstatus &

# Audio control
super + a
  st -c "fSt" -e 'pulsemixer'

# Terminal, with large and readable font (mainly for screen recordings)
super + control + Return
  st -f 'Fira Code:pixelsize=20'

# Click
super + shift + m
  xdotool keyup Super_L && xdotool click 1

# Lock screen
super + x
  slock

# Screenshots
super + Print
  maim -u ~/pic/scsx/$(date '+%Y-%m-%d_%H-%M-%S').png 

super + shift + Print
  maim -u -s ~/pic/scsx/$(date '+%Y-%m-%d_%H-%M-%S').png 

super + control + Print
  maim -u | tee ~/pic/scsx/$(date '+%Y-%m-%d_%H-%M-%S').png | xclip -selection clipboard -t image/png 

super + shift + control + Print
  maim -u -s | tee ~/pic/scsx/$(date '+%Y-%m-%d_%H-%M-%S').png | xclip -selection clipboard -t image/png 

# Screenkey
super + z
  screenkey &

super + shift + z
  pkill screenkey

# Misc
super + control + p
  passmenu
