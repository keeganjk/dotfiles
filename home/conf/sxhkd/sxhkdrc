# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd 

# Media keys
XF86AudioPlay
  mpc toggle

super + shift + p
  mpc toggle

XF86AudioNext
  mpc next

XF86AudioPrev
  mpc prev

XF86AudioMute
  amixer set Master toggle; killall dwmstatus; dwmstatus &

XF86AudioLowerVolume
  amixer set Master 1%-; killall dwmstatus; dwmstatus &

XF86AudioRaiseVolume
  amixer set Master 1%+; killall dwmstatus; dwmstatus &

# Click
super + n
  xdotool keyup Super_L && xdotool click 1

# Lock screen
super + x
  slock

# Screenshots
super + Print
  maim -u ~/pic/scsx/$(date '+%Y-%m-%d_%H-%M').png 

super + shift + Print
  maim -u -s ~/pic/scsx/$(date '+%Y-%m-%d_%H-%M').png 

super + control + Print
  maim -u | tee ~/pic/scsx/$(date '+%Y-%m-%d_%H-%M').png | xclip -selection clipboard -t image/png 

super + shift + control + Print
  maim -u -s | tee ~/pic/scsx/$(date '+%Y-%m-%d_%H-%M').png | xclip -selection clipboard -t image/png 
